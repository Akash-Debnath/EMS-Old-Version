.loader {
    background: #FFFFFF;
	background-image:url(../images/preloader.gif) !important;
	background-repeat:no-repeat;
	background-position:10% 50%;
    position: fixed;
    width: 280px;
    height: 60px;
	padding:15px 20px 20px 90px;
    top: 50%;
    left: 50%;
	font-size:22px;
    margin-left: -75px;
    margin-top: -50px;
	border:1px solid #999;
	border-radius:5px;
	box-shadow: 0 0 30px #000000;
	opacity:0.9;

}